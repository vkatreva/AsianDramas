@model AsianDramas.Models.DramaActor

<h2>Add Actor to Drama</h2>

<form method="post">
    <div class="mb-3">
        <label>Drama</label>
        <select name="DramaId" class="form-select">
            @foreach (var d in ViewBag.Dramas)
            {
                <option value="@d.Id">@d.Title</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Actor</label>
        <select name="ActorId" class="form-select">
            @foreach (var a in ViewBag.Actors)
            {
                <option value="@a.Id">@a.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Role Name</label>
        <input name="RoleName" class="form-control" />
    </div>

    <button class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
