@model IEnumerable<AsianDramas.Models.DramaActor>

<h1>Drama Actors</h1>

<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search actor or drama" />
    <button class="btn btn-primary">Search</button>
</form>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="actor">Actor</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="drama">Drama</a>
            </th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var da in Model)
        {
            <tr>
                <td>@da.Actor.Name</td>
                <td>@da.Drama.Title</td>
                <td>@da.RoleName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@da.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@da.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@da.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    Page @ViewBag.Page of @ViewBag.TotalPages
</div>

<a asp-action="Create" class="btn btn-success mt-3">+ Add New Relation</a>
