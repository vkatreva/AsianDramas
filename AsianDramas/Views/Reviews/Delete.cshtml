@model AsianDramas.Models.Review

@{
    ViewData["Title"] = "Delete review";
}

<div class="auth-wrapper">
    <div class="auth-card review-card">
        <h1 class="auth-title">Delete review</h1>

        <p class="review-danger-text">
            Are you sure you want to delete this review for
            <strong>@Model.Drama?.Title</strong>?
        </p>

        <div class="review-delete-box">
            <div class="review-delete-row">
                <span class="review-delete-label">User</span>
                <span class="review-delete-value">@Model.ReviewerName</span>
            </div>

            <div class="review-delete-row">
                <span class="review-delete-label">Rating</span>
                <span class="review-delete-value">@Model.Rating / 10</span>
            </div>

            <div class="review-delete-row">
                <span class="review-delete-label">Comment</span>
                <span class="review-delete-value">@Model.Comment</span>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="review-actions mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn-danger">
                Yes, delete
            </button>

            <a asp-controller="Dramas"
               asp-action="Details"
               asp-route-id="@Model.DramaId"
               class="btn-ghost">
                Cancel
            </a>
        </form>
    </div>
</div>
