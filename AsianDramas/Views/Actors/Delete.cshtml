@model AsianDramas.Models.Actor

@{
    ViewData["Title"] = "Delete actor";
}

<div class="auth-wrapper">
    <div class="auth-card" style="max-width:650px; margin:40px auto;">
        <h1 class="auth-title">Delete actor</h1>

        <p class="text-muted mb-3">
            Are you sure you want to delete this actor?
        </p>

        <div class="mb-3" style="line-height:1.6;">
            <div class="text-white" style="font-size:1.1rem; font-weight:700;">
                @Model.Name
            </div>

            <div class="text-muted">
                <strong class="text-white">Nationality:</strong> @Model.Nationality
            </div>

            <div class="text-muted">
                <strong class="text-white">Birth date:</strong> @(Model.BirthDate?.ToString("d") ?? "-")
            </div>
        </div>

        <div class="alert alert-danger mb-3" style="background: rgba(220,53,69,.12); border: 1px solid rgba(220,53,69,.35); color: #ffd7dc;">
            This action cannot be undone.
        </div>

        <form asp-action="Delete" method="post" class="auth-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-actions">
                <button type="submit" class="btn-danger-wide">Yes, delete</button>
                <a asp-action="Index" class="btn-secondary-wide">Cancel</a>
            </div>
        </form>
    </div>
</div>
