@model AsianDramas.Models.ViewModels.MyListItemEditViewModel
@using AsianDramas.Models

@{
    ViewData["Title"] = "Edit My List Item";
}

<div class="container mt-4">
    <h2 class="text-white mb-3">Edit item</h2>
    <div class="dw-dark-form">
    <div class="card p-3">
        <div class="d-flex align-items-start gap-3">
            @if (!string.IsNullOrWhiteSpace(Model.PosterUrl))
            {
                <img src="@Model.PosterUrl" alt="@Model.DramaTitle" style="width:90px; border-radius:8px;" />
            }

            <div>
                <h5 class="mb-2">@Model.DramaTitle</h5>

                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input asp-for="Id" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select"
                                asp-items="Html.GetEnumSelectList<MyListStatus>()">
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Note" class="form-label"></label>
                        <textarea asp-for="Note" class="form-control" rows="4" maxlength="500"></textarea>
                        <div class="form-text">Max 500 characters.</div>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
